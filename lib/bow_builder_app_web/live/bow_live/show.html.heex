<.header>
  <%= @bow.name %>
  <:subtitle>ID: <%= @bow.id %></:subtitle>
  <:actions>
    <.link patch={~p"/bows/#{@bow}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit bow</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Riser:">
    <%= if @riser do %>
      <.link patch={~p"/bows/#{@bow}/bow_components/#{@riser.id}"}><%= @riser.component.name %></.link>
    <% else %>
      <.link patch={~p"/bows/#{@bow}/bow_components/new?type=#{"riser"}"}>None selected</.link>
    <% end %>
  </:item>

  <:item title="Limbs:">
    <%= if @limbs do %>
      <.link patch={~p"/bows/#{@bow}/bow_components/#{@limbs.id}"}><%= @limbs.component.name %></.link>
    <% else %>
      <.link patch={~p"/bows/#{@bow}/bow_components/new?type=#{"limbs"}"}>None selected</.link>
    <% end %>
  </:item>

  <:item title="Sight:">
    <%= if @sight do %>
      <.link patch={~p"/bows/#{@bow}/bow_components/#{@sight.id}"}><%= @sight.component.name %></.link>
    <% else %>
      <.link patch={~p"/bows/#{@bow}/bow_components/new?type=#{"sight"}"}>None selected</.link>
    <% end %>
  </:item>

  <:item title="Stabilizers:">
    <%= if @stabs do %>
      <.link patch={~p"/bows/#{@bow}/bow_components/#{@stabs.id}"}><%= @stabs.component.name %></.link>
    <% else %>
      <.link patch={~p"/bows/#{@bow}/bow_components/new?type=#{"stabs"}"}>None selected</.link>
    <% end %>
  </:item>
</.list>

