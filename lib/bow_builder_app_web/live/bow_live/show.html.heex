      <.link patch={~p"/bows/#{@bow}/bow_components/#{@riser.id}"}><%= bow_component.component.name %></.link>
    </:item>
  </.list>
<% end %>
-->

<.back navigate={~p"/bows"}>Back to bows</.back>

<.modal :if={@live_action == :edit} id="bow-modal" show on_cancel={JS.patch(~p"/bows/#{@bow}")}>
  <.live_component
    module={BowBuilderAppWeb.BowLive.FormComponent}
    id={@bow.id}
    title={@page_title}
    action={@live_action}
    bow={@bow}
    patch={~p"/bows/#{@bow}"}
  />
</.modal>
